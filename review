  <script>
    const stars = document.querySelectorAll('.stars .star');

    function handleStarClick() {
      const clickedStar = this;
      const question = clickedStar.parentNode.dataset.question;
      const starValue = clickedStar.dataset.value;

      // Remove the filled-star class from all stars of the same question
      const starsOfQuestion = document.querySelectorAll(`.stars[data-question="${question}"] .star`);
      starsOfQuestion.forEach(star => star.classList.remove('filled-star'));

      // Add the filled-star class to the clicked star and previous stars
      starsOfQuestion.forEach(star => {
        if (star.dataset.value <= starValue) {
          star.classList.add('filled-star');
        }
      });
    }

    // Add event listeners to each star
    stars.forEach(star => star.addEventListener('click', handleStarClick));
  </script>
